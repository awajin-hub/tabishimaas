<h1>ログイン</h1>
<div>
  <%= form_with(url: login_path, scope: :sessions, local: true) do |f| %>
  
    <div>
      <%= f.label :email, "メール" %>
      <%= f.email_field :email %>
    </div>
    
    <div>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
    </div>
    
    <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
  
  <% end %>
  
</div>
